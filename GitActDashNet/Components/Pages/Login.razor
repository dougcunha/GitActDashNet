@page "/login"

<MudPaper Class="d-flex flex-column align-center justify-center" Style="height:100vh;">
    <MudText Typo="Typo.h4" Class="mb-4">Sign in with GitHub</MudText>
    <MudText Typo="Typo.body1" Class="mb-4">Authenticate with your GitHub account to access your repositories and workflows.</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnGitHubLogin">
        <MudIcon Icon="@Icons.Custom.Brands.GitHub" Class="mr-2" />
        Sign in with GitHub
    </MudButton>
</MudPaper>

@inject NavigationManager Navigation

@code {
    private void OnGitHubLogin()
    {
        Navigation.NavigateTo("/api/auth/login", forceLoad: true);
    }
}
